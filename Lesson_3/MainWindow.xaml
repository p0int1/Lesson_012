<Window x:Class="Lesson_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="320">
    <Grid Margin="0,0,0,14">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="--" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.504,0.844" BorderBrush="Black" FontFamily="Consolas" FontSize="24" Margin="30,63,0,0"/>
        <Button x:Name="btnStart" Content="Start" Margin="0,10,37,0" VerticalAlignment="Top" Height="34" Click="btnStart_Click" HorizontalAlignment="Right" Width="58"/>
        <Button x:Name="btnStop" Content="Stop" VerticalAlignment="Top" Height="34" Margin="0,65,37,0" Click="btnStop_Click" HorizontalAlignment="Right" Width="58"/>
        <Button x:Name="btnReset" Content="Reset" Margin="0,122,37,0" VerticalAlignment="Top" Height="34" RenderTransformOrigin="0.353,1.795" Click="btnReset_Click" HorizontalAlignment="Right" Width="58"/>

    </Grid>
</Window>
